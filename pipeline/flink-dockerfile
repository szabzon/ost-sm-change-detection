FROM flink:1.17.0

# install python3: it has updated Python to 3.9 in Debian 11 and so install Python 3.7 from source
# it currently only supports Python 3.6, 3.7 and 3.8 in PyFlink officially.


# Update package list
RUN apt-get update -y

# Install build essentials and development libraries
RUN apt-get install -y build-essential

# Install required development libraries
RUN apt-get install -y libssl-dev zlib1g-dev libbz2-dev libffi-dev

# Download and extract Python 3.7.9
RUN wget https://www.python.org/ftp/python/3.7.9/Python-3.7.9.tgz && \
    tar -xvf Python-3.7.9.tgz

# Configure and build Python
RUN cd Python-3.7.9 && \
    ./configure --without-tests --enable-shared && \
    make -j6 && \
    make install && \
    ldconfig /usr/local/lib && \
    cd ..

# Clean up Python installation files
RUN rm -f Python-3.7.9.tgz && \
    rm -rf Python-3.7.9

# Create a symbolic link for 'python'
RUN ln -s /usr/local/bin/python3 /usr/local/bin/python

# Clean up apt cache
RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# copy working directory with flink dependencies
COPY marcell_change_detection/ /home/pyflink

# install PyFlink
RUN pip3 install /home/pyflink/flink/apache-flink-libraries*.tar.gz && pip3 install /home/pyflink/flink/apache-flink*.tar.gz

# install required python packages from txt file
RUN pip3 install -r /home/pyflink/flink/flink_requirements.txt